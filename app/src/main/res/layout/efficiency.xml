<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/blacki_overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinnerone"
                android:layout_width="50dp"
                android:visibility="invisible"
                android:layout_alignBottom="@+id/ttedione"
                android:layout_height="wrap_content">
            </android.support.v7.widget.AppCompatSpinner>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ttedione"
                android:layout_width="match_parent"
                android:textColorHint="#0a2149"
                android:layout_toRightOf="@+id/spinnerone"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_gravity="center_vertical"
                    android:id="@+id/edione"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@android:drawable/editbox_background"
                    android:layout_width="match_parent"
                    android:inputType="textEmailAddress"
                    android:textColor="#0a2149"
                    android:textColorHint="#0a2149"
                    android:backgroundTint="#ffffff"
                    android:layout_height="wrap_content"
            android:hint="input power in watts"/>

    </android.support.design.widget.TextInputLayout>
            <RelativeLayout
                android:id="@+id/reltwo"
                android:layout_margin="5dp"
                android:layout_below="@+id/ttedione"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinnertwo"
                    android:layout_width="50dp"
                    android:layout_alignBottom="@+id/tteditwo"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.AppCompatSpinner>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tteditwo"
                    android:layout_width="match_parent"
                    android:textColorHint="#0a2149"
                    android:layout_toRightOf="@+id/spinnertwo"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_gravity="center_vertical"
                        android:id="@+id/editwo"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@android:drawable/editbox_background"
                        android:layout_width="match_parent"
                        android:inputType="number|numberDecimal"
                        android:textColor="#0a2149"
                        android:textColorHint="#0a2149"
                        android:backgroundTint="#ffffff"
                        android:layout_height="wrap_content"
                android:hint="output power in watts"/>

        </android.support.design.widget.TextInputLayout>
        <TextView
            android:visibility="gone"
            android:layout_below="@+id/tteditwo"
            android:text="make sure you select whether size is area, diameter or radius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/proceed"
                android:src="@drawable/ic_proceed"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/reltwo"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="50dp"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/retrieve"
                android:src="@drawable/ic_reborn"
                android:layout_marginRight="10dp"
                android:layout_alignBottom="@id/proceed"
                android:layout_toLeftOf="@id/proceed"
                android:layout_width="45dp"
                android:layout_height="45dp" />
</RelativeLayout>

    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>